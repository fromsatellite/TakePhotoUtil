<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="80dp"
    android:layout_height="110dp"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_take"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="center"
        />

    <LinearLayout
        android:id="@+id/lay_status"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:visibility="gone"
         >

        <ImageView
            android:id="@+id/iv_location1"
            android:layout_width="@dimen/const_width_small"
            android:layout_height="@dimen/const_width_small"
            android:src="@mipmap/location_success" />

        <TextView
            android:id="@+id/tv_location1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="定位成功"
            android:textColor="@color/text_green"
            android:textSize="@dimen/text_tiny" />
    </LinearLayout>

</LinearLayout>